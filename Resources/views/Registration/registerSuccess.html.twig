{% extends "@PdUser/base.html.twig" %}

{% block head_title %}{{ 'security.register_title'|trans }}{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="container">
        <div class="auth register">
            <!-- Form -->
            <form action="{{ path("security_login") }}">
                <div class="header">
                    <h2 class="title">{{ 'security.register_title'|trans }}</h2>
                    <div class="float-icon">
                        <a href="{{ path('security_login') }}" class="add" title="{{ 'security.login_title'|trans }}"><i class="material-icons">security</i></a>
                    </div>
                </div>

                <div class="form-group auth-message">
                    {% if user.isActive %}
                        {{ 'security.register_success'|trans }}
                    {% else %}
                        {{ 'security.register_confirmed'|trans }}
                    {% endif %}
                </div>

                <div class="submit">
                    <button type="submit" class="btn btn-lg btn-primary">{{ 'security.login_btn'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
